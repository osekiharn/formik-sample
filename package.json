{
  "name": "my-react-template",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "webpack --config webpack.dev.js",
    "build:prod": "webpack --config webpack.prod.js",
    "build:watch": "webpack -w --mode development",
    "clean": "rimraf dist",
    "clean:cache": "rimraf ./node_modules/.cache/hard-source",
    "serve": "webpack-dev-server --config webpack.dev.js",
    "start": "concurrently \"yarn run clean:cache\" \"yarn run serve\"",
    "stylelint": "stylelint --config ./.stylelintrc.json \"./src/**/*.scss\" --fix",
    "test": "jest",
    "eslint": "eslint --config .eslintrc \"./**/*.{ts,tsx,jsx,js}\" --fix",
    "prettier": "prettier --config .prettierrc  \"./**/*.{ts,tsx,jsx,js}\" --write"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.10",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/redux": "^3.6.0",
    "@types/redux-logger": "^3.0.8",
    "@types/redux-saga": "^0.10.5",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "concurrently": "^5.3.0",
    "core-js": "^3.6.5",
    "css-loader": "^4.2.1",
    "eslint": "^7.7.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "jest-css-modules": "^2.1.0",
    "lint-staged": "^10.2.11",
    "postcss-loader": "^3.0.0",
    "precss": "^4.0.0",
    "prettier": "^2.0.5",
    "redux-logger": "^3.0.6",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.3",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended": "^3.0.0",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "workbox-webpack-plugin": "^5.1.3"
  },
  "dependencies": {
    "autoprefixer": "^10.2.0",
    "axios": "^0.20.0",
    "clean-webpack-plugin": "^3.0.0",
    "dotenv": "^8.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-webpack-plugin": "^4.5.1",
    "mini-css-extract-plugin": "^1.3.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "ress": "^3.0.0",
    "terser-webpack-plugin": "^5.0.3",
    "webpack": "^5.11.1",
    "webpack-merge": "^5.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "app/**/!(*test).{js,ts,tsx}": [
      "stylelint --config .stylelintrc.json \"./app/**/*.scss\" --fix",
      "eslint --config .eslintrc.js \"./app/**/*.{ts,tsx,jsx,js}\" --fix",
      "git add"
    ]
  }
}
